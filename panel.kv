
   
<MyPanelWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 30
    #canvas:
    #    Rectangle:
    #        source: 'background_michat.png'
    #        pos: self.pos
    #        size: self.size


    Label:
        text: 'void'
        size_hint_y: 0.02
    BoxLayout:
        orientation: 'horizontal'
    #padding: 20
    #spacing: 20
        Slider:
            padding: 40
            id: spdbrk
            orientation: 'vertical'
            min: 0.0
            max: 2.0
            step: 1.0
            value: 2.0
            on_value: root.send_spdbrk()
            canvas:
                Rectangle:
                    pos: (self.center_x - 33, self.value_pos[1] - 16)
                    size: (64, 32)
                    source: 'slider_spdbrk.png'
       
        Slider:
            id: t1
            orientation: 'vertical'
            on_value: root.send_throttle()
            canvas:
                Rectangle:
                    pos: (self.center_x - 65, self.value_pos[1] - 32)
                    size: (128, 64)
                    source: 'slider_throttle.png'  
        

       
        Slider:
            id: t2
            orientation: 'vertical'
            #value: t1.value
            on_value: root.send_throttle()
            canvas:
                Rectangle:
                    pos: (self.center_x - 65, self.value_pos[1] - 32)
                    size: (128, 64)
                    source: 'slider_throttle.png'
        
            
        Slider:
            id: etrim
            orientation: 'vertical'
            value: 50
            on_value: root.send_etrim()
            
        Slider:
            padding: 40
            id: flaps
            orientation: 'vertical'
            min: 0
            max: 4
            step: 1
            value: 4
            on_value: root.send_flaps()
            canvas:
                Rectangle:
                    pos:  (self.center_x - 33, self.value_pos[1] - 16)
                    size: (64, 32)
                    source: 'slider_flaps.png'
                
        Slider:
            id: zoom
            value: 55
            orientation: 'vertical'
            on_value: root.send_zoom()
        
                
    BoxLayout:
        size_hint_y: 0.4
        orientation: 'horizontal'
        ToggleButton:
            background_down: 'pbrake.jpg'
            background_normal: 'pbrake_off.jpg'
            id: pb
            on_press: root.send_pb()
        
        ToggleButton:
            #size_hint_x: 2.0
            background_color: 1,1,1,0.5
            text: 'REVERSE'
            id: rev
            on_press: root.send_rev()
            
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 2.0
            BoxLayout:
                
                spacing: 10
                padding: 10
                orientation: 'horizontal'
                ToggleButton:
                    text: 'light'
                ToggleButton:
                    text: 'light'
                ToggleButton:
                    text: 'light'    
                ToggleButton:
                    text: 'light' 
                ToggleButton:
                    text: 'light'
            BoxLayout:
                
                spacing: 10
                padding: 10
                orientation: 'horizontal'
                Button:
                    text: 'BRAKE'
                    id: tb
                    on_state: root.send_tb()
                ToggleButton:
                    text: 'GEAR'
                    background_color: 0,1,0,1
                    id: gear
                    state: 'down'
                    on_press: root.send_gear()
                Button:
                    text: 'f2'    
                Button:
                    text: 'view' 
                    on_press: root.send_view()
                Button:
                    text: 'reset\nview' 
                    on_press: root.reset_view()

 
        