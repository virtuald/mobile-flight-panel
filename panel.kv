
         
<MyPanelWidget>:
    orientation: 'horizontal'
    padding: 20
    #spacing: 20
    canvas:
        Rectangle:
            source: 'background_michat.png'
            pos: self.pos
            size: self.size

    
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'void'
            size_hint_y: 0.2
        Slider:
            id: spdbrk
            orientation: 'vertical'
            min: 0.0
            max: 2.0
            step: 1.0
            value: 2.0
            on_value: root.send_spdbrk()
            canvas:
                Rectangle:
                    pos: (self.center_x - 33, self.value_pos[1] - 16)
                    size: (64, 32)
                    source: 'slider_spdbrk.png'
        Label:
            text: 'void'
            size_hint_y: 0.6
            
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        Label:
            text: 'void'
            size_hint_y: 0.1        

    
        Slider:
            id: t1
            orientation: 'vertical'
            on_value: root.send_throttle()
            canvas:
                Rectangle:
                    pos: (self.center_x - 65, self.value_pos[1] - 32)
                    size: (128, 64)
                    source: 'slider_throttle.png'  
        ToggleButton:
            text: 'reverse'
            size_hint_y: 0.4

    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        Label:
            text: 'void'
            size_hint_y: 0.1  
        Slider:
            id: t2
            orientation: 'vertical'
            #value: t1.value
            on_value: root.send_throttle()
            canvas:
                Rectangle:
                    pos: (self.center_x - 65, self.value_pos[1] - 32)
                    size: (128, 64)
                    source: 'slider_throttle.png'
        ToggleButton:
            text: 'reverse'
            size_hint_y: 0.4
        
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'void'
            size_hint_y: 0.2                        
        Slider:
            id: flaps
            orientation: 'vertical'
            min: 0
            max: 4
            step: 1
            value: 4
            on_value: root.send_flaps()
            canvas:
                Rectangle:
                    pos:  (self.center_x - 33, self.value_pos[1] - 16)
                    size: (64, 32)
                    source: 'slider_flaps.png'
                
   
    BoxLayout:
		size_hint_x: 0.5
        orientation: 'vertical'
        ToggleButton:
            background_color: 0,1,0,1
            text: "GEAR"
			id: gear
			state: 'down'
            on_press: root.send_gear()
            #on_release: self.text = 'GEAR UP'
        Label:
            text: 'AUTO/BRK'
            size_hint_y: 0.5
        ToggleButton:
            text: "LO"
            group: 'ab'
        ToggleButton:
            text: "MED"
            group: 'ab'
        ToggleButton:
            text: "MAX"
            group: 'ab'
        Button:
           
            text: "BREAKS"
        ToggleButton:
           
            text: "REVERSE"
		Button:
			text: "VIEW"
            on_press: root.send_view()
		Button:
			text: "RESET\nVIEW"
            on_press: root.reset_view()
	BoxLayout:
    	orientation: 'vertical'
    	Slider:
            id: zoom
            value: 55
            orientation: 'vertical'
            on_value: root.send_zoom()
    	Label:
    		text: 'zoom'
    		halign: 'center'
    		size_hint_y: 0.1
    BoxLayout:
        orientation: 'vertical'
		BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'P.Break'
                font_size: 10
            Switch:
                id: pb
                active: True
                on_active: root.send_pb()
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'FUEL PUMP'
                font_size: 10
            Switch:
                id: 'fuel'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'Pitot Heat'
                font_size: 10
            Switch:
                id: 'heat'                
        Label:
            text: 'LIGHTS'
            size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'BCN'
            Switch:
                id: 'bcn'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'LAND'
            Switch:
                id: 'land'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'TAXI'
            Switch:
                id: 'taxi'
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'NAV'
            Switch:
                id: 'nav'                
        BoxLayout:
            size_hint_y: 0.1
            orientation: 'horizontal'
            Label:
                text: 'STROBE'
            Switch:
                id: 'strobe'        
        Label:
            text: str(flaps.value)
            size_hint_y: 0.3
        Label:
            text: str(spdbrk.value)
            size_hint_y: 0.3
        
       
       
            
        
            
        